{
  "name": "black-counter",
  "version": "1.0.0",
  "description": "Contador de blackjack com build port√°til para Windows",
  "main": "electron/main.js",
  "scripts": {
    "start": "electron .",
    "package:win": "electron-builder --win portable",
    "package:dir": "electron-builder --dir",
    "lint:core": "node --check app/assets/main.js"
  },
  "license": "MIT",
  "devDependencies": {
    "electron": "^29.4.0",
    "electron-builder": "^25.1.8"
  },
  "build": {
    "appId": "com.blackcounter.app",
    "productName": "BlackCounter",
    "asar": true,
    "files": [
      "app/**/*",
      "electron/**/*",
      "package.json"
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "BlackCounter_Portable_${version}_${arch}.exe"
    }
  }
}
